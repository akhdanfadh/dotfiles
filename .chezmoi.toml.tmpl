{{- $os_id := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-     $os_id = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $is_wsl := false -}}
{{- if hasKey .chezmoi.kernel "osrelease" -}}
{{-     if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-         $is_wsl = true -}}
{{-     end -}}
{{- end -}}

{{- $git_email := promptString "Git: Default email -> " -}}
{{- $overleaf_cookies := promptString "Neovim: Overleaf cookies -> " -}}
{{- $obsidian_vault := promptString "Obsidian: Vault absolute path -> " -}}

[data]
    os_id = {{ $os_id | quote }}
    is_wsl = {{ $is_wsl }}
    tmux_data_dir = "{{ .chezmoi.homeDir }}/.local/share/tmux"
    git_email = {{ $git_email | quote }}
    overleaf_cookies = {{ $overleaf_cookies | quote }}
    obsidian_vault = {{ $obsidian_vault | quote }}

[diff]
    command = "delta"
    pager = "delta"

